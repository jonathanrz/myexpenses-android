<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	xmlns:tools="http://schemas.android.com/tools"
	android:padding="@dimen/default_spacing">

    <TextView
        android:id="@+id/row_expense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_primary_text"/>

    <TextView
        android:id="@+id/row_expense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_secondary_text"
        android:layout_below="@id/row_expense_name"
        android:textSize="8sp"
        tools:ignore="SmallSp"/>

    <TextView
        android:id="@+id/row_expense_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_primary"/>

	<LinearLayout
		android:id="@+id/row_expense_chargeable_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/row_expense_date"
		android:orientation="horizontal">

        <TextView
            android:id="@+id/row_expense_chargeable_stt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/paid_with"
            android:layout_marginEnd="@dimen/min_spacing"
            android:textSize="10sp"
            tools:ignore="SmallSp"/>

        <TextView
            android:id="@+id/row_expense_chargeable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_primary"
            android:textSize="10sp"
            tools:ignore="SmallSp"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/row_expense_bill_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/row_expense_chargeable_layout"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/row_expense_bill_stt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/bill"
			android:layout_marginEnd="@dimen/min_spacing"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/row_expense_bill"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="@color/color_primary"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>

	</LinearLayout>

	<TextView
		android:id="@+id/row_expense_charge_next_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_next_month"
        android:layout_below="@id/row_expense_bill_layout"
        android:layout_alignParentEnd="true"
        android:textColor="@color/color_secondary_text"
        android:textSize="10sp"
        tools:ignore="SmallSp"
        android:visibility="invisible"/>

</RelativeLayout>