<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="@dimen/row_spacing">

    <TextView
	    style="@style/RowPrincipalInformation"
        android:id="@+id/row_expense_name"
	    android:layout_marginEnd="@dimen/min_spacing"
	    android:layout_toStartOf="@+id/row_expense_value"
	    android:layout_alignParentStart="true"/>

    <TextView
	    style="@style/RowDetailInformation"
        android:id="@+id/row_expense_date"
        android:layout_below="@id/row_expense_name"/>

    <TextView
	    style="@style/RowSecondaryInformation"
        android:id="@id/row_expense_value"
        android:layout_alignParentEnd="true"/>

	<LinearLayout
		android:id="@+id/row_expense_chargeable_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/row_expense_date"
		android:orientation="horizontal"
		android:layout_marginTop="@dimen/min_spacing">

        <TextView
	        style="@style/RowStaticInformation"
            android:id="@+id/row_expense_chargeable_stt"
            android:text="@string/paid_with"
            android:layout_marginEnd="@dimen/min_spacing"/>

        <TextView
	        style="@style/RowSecondaryInformation"
            android:id="@+id/row_expense_chargeable"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/row_expense_bill_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/row_expense_chargeable_layout"
		android:orientation="horizontal">

		<TextView
			style="@style/RowStaticInformation"
			android:id="@+id/row_expense_bill_stt"
			android:text="@string/bill"
			android:layout_marginEnd="@dimen/min_spacing"/>

		<TextView
			style="@style/RowSecondaryInformation"
			android:id="@+id/row_expense_bill"/>

	</LinearLayout>

	<TextView
		style="@style/RowDetailInformation"
		android:id="@+id/row_expense_charge_next_month"
        android:text="@string/pay_next_month"
        android:layout_below="@id/row_expense_bill_layout"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

</RelativeLayout>