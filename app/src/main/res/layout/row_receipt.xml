<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/row_spacing">

	<TextView
		style="@style/RowPrincipalInformation"
		android:id="@+id/row_receipt_name"
		android:layout_marginEnd="@dimen/min_spacing"
		android:layout_toStartOf="@+id/row_receipt_income"
		android:layout_alignParentStart="true"/>

	<TextView
		style="@style/RowDetailInformation"
		android:id="@+id/row_receipt_date"
		android:layout_below="@id/row_receipt_name"/>

	<TextView
		style="@style/RowSecondaryInformation"
		android:id="@id/row_receipt_income"
		android:layout_alignParentEnd="true"/>

	<LinearLayout
		android:id="@+id/row_receipt_source_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/row_receipt_date"
		android:layout_marginTop="@dimen/min_spacing">

		<TextView
			style="@style/RowStaticInformation"
			android:id="@+id/row_receipt_source_stt"
			android:text="@string/source"
			android:layout_marginEnd="@dimen/min_spacing"/>

		<TextView
			style="@style/RowSecondaryInformation"
			android:id="@+id/row_receipt_source"/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/row_receipt_account_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@id/row_receipt_source_layout">

		<TextView
			style="@style/RowStaticInformation"
			android:id="@+id/row_receipt_account_stt"
			android:text="@string/account"
			android:layout_marginEnd="@dimen/min_spacing"/>

		<TextView
			style="@style/RowSecondaryInformation"
			android:id="@+id/row_receipt_account"/>

	</LinearLayout>

	<TextView
		style="@style/RowDetailInformation"
		android:id="@+id/row_receipt_show_in_resume_stt"
		android:text="@string/show_in_resume"
		android:layout_below="@id/row_receipt_account_layout"
		android:layout_alignParentEnd="true"
		android:visibility="invisible"/>
</RelativeLayout>