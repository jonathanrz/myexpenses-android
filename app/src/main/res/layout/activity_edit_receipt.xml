<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_margin="@dimen/default_spacing">

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_name"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:hint="@string/name"/>

	        </android.support.design.widget.TextInputLayout>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_date"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="none"
	                android:focusable="false"
	                android:clickable="true"
	                android:hint="@string/date"/>

	        </android.support.design.widget.TextInputLayout>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_income"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	                android:hint="@string/income"/>

	        </android.support.design.widget.TextInputLayout>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_source"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="none"
	                android:focusable="false"
	                android:clickable="true"
	                android:hint="@string/source"/>

	        </android.support.design.widget.TextInputLayout>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_account"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="none"
	                android:focusable="false"
	                android:clickable="true"
	                android:hint="@string/accounts"/>

	        </android.support.design.widget.TextInputLayout>

		    <CheckBox
			    android:id="@+id/act_edit_receipt_show_in_resume"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginBottom="@dimen/min_spacing"
			    android:text="@string/show_in_resume"
			    android:checked="true"/>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_repetition"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	                android:text="@string/_1"
	                android:hint="@string/repetition"/>

	        </android.support.design.widget.TextInputLayout>

	        <android.support.design.widget.TextInputLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/default_spacing">

	            <android.support.v7.widget.AppCompatEditText
	                android:id="@+id/act_edit_receipt_installment"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:inputType="number"
	                android:text="@string/_1"
	                android:hint="@string/installments"/>

	        </android.support.design.widget.TextInputLayout>
	    </LinearLayout>
	</ScrollView>

</LinearLayout>